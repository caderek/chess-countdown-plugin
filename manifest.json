{
  "name": "Chess Countdown",
  "description": "Lichess time trouble countdown plugin",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/images/ico16.png",
      "32": "/images/ico32.png",
      "48": "/images/ico48.png",
      "128": "/images/ico128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://lichess.org/*"],
      "js": ["content-script.js"]
    }
  ],
  "icons": {
    "16": "/images/ico16.png",
    "32": "/images/ico32.png",
    "48": "/images/ico48.png",
    "128": "/images/ico128.png"
  }
}
